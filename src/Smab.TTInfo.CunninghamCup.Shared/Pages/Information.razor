@page "/information"
@inject ITournamentService _tournamentService

<PageTitle>Information - @(tournament?.Name ?? "Cunningham Cup")</PageTitle>

<h1>@(tournament?.Name ?? "Cunningham Cup")</h1>

<div>
	<div>

		<h3>Program for the day (if all runs to plan)</h3>
		<dl>
			<dt>09:15</dt>
			<dd>Registration and first set of group matches begin</dd>
			<dt>10:45</dt>
			<dd>Registration and second set of group matches begin</dd>
			<dt>12:30</dt>
			<dd>Lunch break</dd>
			<dt>13:00</dt>
			<dd>Knockout stages begin</dd>
			<dt>15:00</dt>
			<dd>Semi-Finals</dd>
			<dt>15:45</dt>
			<dd>Finals</dd>
		</dl>

		<h3>Tournaments</h3>

		<div>
			<p>There will be 2 knockout tournaments after the group stages.</p>
			<p>
				The Cunningham Cup is for the top 2 players in each group, and there will
				be a consolation knockout for those coming 3rd and 4th.
			</p>
		</div>

		<MatchRules />
	</div>
</div>

@code {
	public Tournament? tournament { get; set; }

	protected override void OnInitialized()
	{
		tournament ??= _tournamentService.GetTournament();
	}
}
